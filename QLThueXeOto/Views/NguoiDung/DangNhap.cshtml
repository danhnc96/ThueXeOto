
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}
<style>
    .QuangCao{
        display:none;
    }
    #divDangNhap{
        width:100%;
        text-align:center;
    }
    #divDangNhap table {
       margin-left:50%;
    }
</style>
<div id="divDangNhap">
    <h2>ĐĂNG NHẬP</h2>
    <h1>@ViewBag.ThongBao</h1>

    @using (Html.BeginForm())
    {
        <table border="1">
            <table>
                <tr>
                    <td>Tên Đăng Nhập</td>
                    <td>@Html.TextBox("txtTaiKhoan")</td>
                </tr>
                <tr>
                    <td>Mật Khẩu</td>
                    <td><input name="txtMatKhau" type="text" /></td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" id="btnSubmit" name="btnSubmit" value="Đăng Nhập" /></td>
                </tr>
            </table>
        </table>
    }
</div>


